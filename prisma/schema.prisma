// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model for the data from your scanner
model AnimalWithVideo {
  id        Int       @id
  name      String?
  type      String?
  gender    String?
  breed     String?
  city      String?
  state     String?
  videoUrl  String
  rawJson   Json
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("animals_with_videos")
}

// Model for an anonymous user
model User {
  id         Int         @id @default(autoincrement())
  uuid       String      @unique
  createdAt  DateTime    @default(now()) @map("created_at")
  seenVideos SeenVideo[]

  @@map("users")
}

// Model to track which videos a user has seen
model SeenVideo {
  userId    Int      @map("user_id")
  animalId  Int      @map("animal_id")
  seenAt    DateTime @default(now()) @map("seen_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, animalId])
  @@map("seen_videos")
}